
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    @*Здесь подключили bootstrap css и библиотек JQuery*@
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    @*Здесь подключили  библиотек JQuery*@
    <script src="~/Scripts/jquery-1.9.1.min.js" type="text/javascript"></script>

    <title>Index</title>
</head>
<body>
  <div class="container">

      
       <!-- Хедер -->

       <div class="row">
	
         <div class="col-lg-6 col-sm-8">
			
            <h1>Пишем стихи!</h1>
	
        </div>	
	
        <div class="col-lg-6 col-sm-4">
		
            <img src="~/img/1.gif" alt="">
	
        </div>

        
        
      </div>

       <!-- Форма -->

        <div class="row">

        @using (Html.BeginForm("Create", "Home", FormMethod.Post,new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                <p>@Html.DropDownList("Select", ViewBag.Words as SelectList, "Виберите слово" ,new { @class = "form-control" })</p>
            </div>
            <div class="form-group">
                <p>@Html.DropDownList("Select", ViewBag.Words1 as SelectList, "Виберите слово", new { @class = "form-control" })</p>
               
            </div>
           <div class="form-group">
             <input type="submit" class="btn btn-info form-control" value="Сочинить стих" />
           </div>
            
        }
       </div>
  </div>
     
                <script src="~/Scripts//bootstrap.min.js"></script>
</body>
</html>
